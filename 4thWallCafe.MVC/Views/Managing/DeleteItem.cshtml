@model DeleteItemModel
@{
    ViewData["title"] = "4th Wall Cafe : Delete Item";
}

<h2 class="display-6 text-danger">Delete Item @Model.ItemName</h2>
<p class="lead">Are you sure you want to delete this item?</p>

<div class="d-flex gap-5 align-items-center">
    <form asp-controller="Managing" asp-action="DeleteItemPost" method="post" asp-route-id="@Model.ItemID">
        <button class="btn btn-danger">Delete</button>
    </form>
    <a href="javascript:history.go(-1)">Go Back</a>
</div>