@model AddItemModel

@{
    ViewData["title"] = "4th Wall Cafe : Edit Item";
}

<h2 class="display-3">Edit Item</h2>
<form asp-controller="Managing" asp-action="EditItem" method="post" class="w-100">
    @Html.AntiForgeryToken()
    <div>
        <label asp-for="Form.ItemName" class="form-label"></label>
        <input asp-for="Form.ItemName" class="form-control">
        <span asp-validation-for="Form.ItemName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Form.ItemDescription" class="form-label"></label>
        <textarea asp-for="Form.ItemDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Form.ItemDescription" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Form.CategoryId" class="form-label"></label>
        <select asp-for="Form.CategoryId" asp-items="@Model.CategoryList" class="form-select">
            <option value="">- SELECT -</option>
        </select>
        <span asp-validation-for="Form.CategoryId" class="text-danger"></span>
    </div>
    <div class="mt-3 mb-3">
        <legend>Prices</legend>
        <div class="border border-dark-subtle p-2 p-sm-4 m-sm-4 w-100">
            <div class="d-flex mb-2">
                <label asp-for="Form.BreakfastPrice" class="form-label text-end pe-5" style="flex: 0 0 70%"></label>
                <input asp-for="Form.BreakfastPrice" class="form-control" style="flex: 0 0 30%">
            </div>
            <div class="d-flex mb-3">
                <label asp-for="Form.LunchPrice" class="form-label text-end pe-5" style="flex: 0 0 70%"></label>
                <input asp-for="Form.LunchPrice" class="form-control" style="flex: 0 0 30%">
            </div>
            <div class="d-flex mb-3">
                <label asp-for="Form.HappyHourPrice" class="form-label text-end pe-5" style="flex: 0 0 70%"></label>
                <input asp-for="Form.HappyHourPrice" class="form-control" style="flex: 0 0 30%">
            </div>
            <div class="d-flex mb-3">
                <label asp-for="Form.DinnerPrice" class="form-label text-end pe-5" style="flex: 0 0 70%"></label>
                <input asp-for="Form.DinnerPrice" class="form-control" style="flex: 0 0 30%">
            </div>
            <div class="d-flex">
                <label asp-for="Form.SeasonalPrice" class="form-label text-end pe-5" style="flex: 0 0 70%"></label>
                <input asp-for="Form.SeasonalPrice" class="form-control" style="flex: 0 0 30%">
            </div>
        </div>
    </div>
    <div class="d-flex gap-5">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Managing" asp-action="Items">Go Back</a>
    </div>
</form>
<div asp-validation-summary="All"></div>
