@model OrderReportsModel

@{
    ViewData["Title"] = "4th Wall Cafe : Revenue Reports";
}

<div class="table-responsive p-3 bg-body-tertiary">
    <form asp-controller="Menu" asp-action="Index" method="post" class="d-flex flex-wrap gap-4 align-items-center">
        @Html.AntiForgeryToken()
        <div class="d-flex gap-2 align-items-center">
            <label asp-for="Form.FromDate" class="form-label fs-5">From: </label>
            <input type="date" asp-for="Form.FromDate" class="form-control"/>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <label asp-for="Form.ToDate" class="form-label fs-5">To: </label>
            <input type="date" asp-for="Form.ToDate" class="form-control"/>
        </div>
        <div class="d-flex align-items-center">
            <label asp-for="Form.OrderBy" class="form-label fs-5">Order By: </label>
            <select asp-for="Form.OrderBy" asp-items="@Model.OrderBySelectItems" class="form-select"></select>
        </div>
        <button type="submit" class="btn btn-primary">Apply</button>
    </form>
</div>
<div class="mt-3">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Server</th>
                <th>Order Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model.OrderReports)
        {
            <tr>
                <td class="menu-table-cell-1">@order.OrderId</td>
                <td class="menu-table-cell-2">@order.ServerName</td>
                <td class="menu-table-cell-3">$@order.OrderTotal</td>
                <td></td>
            </tr>
        }
        </tbody>
    </table>
</div>